# -*- mode: snippet -*-
# name: stack-haddock
# key: stack-haddock
# --
#!/usr/bin/env bash

cabal configure --package-db=clear --package-db=global --package-db=$(stack path --snapshot-pkg-db) --package-db=$(stack path --local-pkg-db)
cabal haddock --executables

if [ -d dist ]
then
    rsync -a dist/doc/ doc/
    rm -r dist
fi